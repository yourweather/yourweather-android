<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.FindPw">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="144dp">

        <TextView
            android:id="@+id/tv_findpw_findpw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="17dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="150dp"
            android:gravity="left"
            android:text="비밀번호 찾기"
            android:textSize="20sp"
            android:textColor="#F07818"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_findpw_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="190dp"
            android:layout_marginEnd="50dp"
            android:gravity="left"
            android:text="가입 시 사용한 이메일을 입력해 주세요"
            android:textColor="#ACACAC"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_findpw_emailtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="50dp"
            android:bufferType="spannable"
            android:gravity="left"
            android:text="이메일"
            android:textColor="#ACACAC"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/et_findpw_email"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="288dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_gray_fill_rect"
            android:drawablePadding="8dp"
            android:textSize="16sp"
            android:paddingLeft="16dp"
            android:textColorHint="#A9ADB4"
            android:textCursorDrawable="@null"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_findpw_next"
            android:layout_width="191dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="370dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/bg_orange_fill_300_circle"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="3sp"
            android:text="다음"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationY="-1.52sp" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>