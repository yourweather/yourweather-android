<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.sign.EmailStatusBar">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_email_back"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="672dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <RelativeLayout
            android:id="@+id/rl_email1"
            android:layout_width="26dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btn_email_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="#00ff0000"
                app:srcCompat="@drawable/btn_calendardetailview_back" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_email2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/tv_email_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:text="이메일 본인 인증"
                android:textSize="20dp"
                android:textFontWeight="700"
                android:textColor="@color/sorange"
                android:fontFamily="@font/pretendardsemibold"/>
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>
</androidx.constraintlayout.widget.ConstraintLayout>