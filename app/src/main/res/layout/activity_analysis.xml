<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.AnalysisActivity">


    <LinearLayout
        android:id="@+id/ll_analysis_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_unwritten_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="26dp"
            android:text="@string/tv_analysis_title"
            android:textColor="@color/sorange"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btn_bell"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="21dp"
            android:layout_height="24dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_bell_event" />

    </LinearLayout>




    <LinearLayout
        android:id="@+id/ll_analysis_btn"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/bg_btn_report_rec"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_analysis_title"
        app:layout_constraintBottom_toTopOf="@id/iv_bar1"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_analysis_weekly"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:paddingBottom="3dp"
            android:paddingTop="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_report_nonselect_rec"
            android:text="주간"
            android:textColor="@color/black"
            android:textSize="12dp"
             />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_analysis_monthly"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:paddingBottom="3dp"
            android:paddingTop="0.5dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/bg_btn_select_brown_rec"
            android:text="월간"
            android:textColor="@color/white"
            android:textSize="12dp"
             />

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_bar1"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="19.5dp"
        android:src="@drawable/bg_gray_fill_rect"
        app:layout_constraintBottom_toTopOf="@+id/scrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_analysis_btn"
        app:layout_constraintVertical_bias="0.036" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_bar1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_bar2"
                android:layout_width="match_parent"
                android:layout_height="8sp"
                android:src="@drawable/bg_gray_fill_rect"
                app:layout_constraintBottom_toTopOf="@+id/scrollView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_analysis"
                app:layout_constraintVertical_bias="0.036" />
            <!-- 상단 프래그먼트 : 감정 날씨 -->
            <include
                android:id="@+id/f_barStatic"
                layout="@layout/fragment_bar_statics_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="21dp"
                />

            <ImageView
                android:id="@+id/iv_bar3"
                android:layout_width="match_parent"
                android:layout_height="8sp"
                android:src="@drawable/bg_gray_fill_rect"
                app:layout_constraintBottom_toTopOf="@+id/scrollView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_analysis"
                app:layout_constraintVertical_bias="0.036" />

            <!-- 하단 프래그먼트 : 아이콘 통계 -->
            <include
                android:id="@+id/f_iconStatic"
                layout="@layout/fragment_icon_statics_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="90dp"
                />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnv_main"
        app:menu="@menu/menu_bnv"
        android:background="@color/bnv_back"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:itemHorizontalTranslationEnabled="false"
        app:labelVisibilityMode="unlabeled"
        app:itemIconTint="@drawable/menu_selector_color"
        app:itemTextColor="@drawable/menu_selector_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>