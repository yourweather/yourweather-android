<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.SignUp">

    <LinearLayout
        android:id="@+id/ll_signup_l0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/ll_signup_l1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="0.47">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.5" />


        <ImageView
            android:id="@+id/iv_signup_logo"
            android:layout_width="51dp"
            android:layout_height="63dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_yourweatherlogo" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1" />

        <TextView
            android:id="@+id/tv_signup_guide"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:bufferType="spannable"
            android:gravity="center"
            android:text="간편하게 기록을 남기고\n나만의 감정 날씨를 만들어보세요"
            android:textColor="#8E7A6D"
            android:textSize="12dp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_signup_l1"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/ll_signup_l2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_signup_l0"
        app:layout_constraintVertical_weight="0.24">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_signup_email2"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:bufferType="spannable"
                android:gravity="left"
                android:text="이메일"
                android:textColor="#989898"
                android:textSize="13dp"
                android:textStyle="bold" />


            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textinput_signup_email"
                    android:layout_width="wrap_content"
                    android:layout_height="81dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_signup_email"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_gray_fill_rect"
                        android:textColorHint="#A9ADB4"
                        android:textCursorDrawable="@null"
                        android:textSize="16dp" />


                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_signup_sendauth"
                    android:layout_width="71dp"
                    android:layout_height="28dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="19dp"
                    android:layout_marginRight="13dp"
                    android:background="@drawable/btn_selecotor_etbtncolor"
                    android:text="인증코드 전송"
                    android:textColor="#FFFFFF"
                    android:textSize="9dp" />
            </FrameLayout>


            <TextView
                android:id="@+id/tv_signup_guide2"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:bufferType="spannable"
                android:gravity="left"
                android:text="이메일로 전송된 인증코드를 입력해주세요"
                android:textColor="#989898"
                android:textSize="13dp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinput_signup_auth"
                android:layout_width="350dp"
                android:layout_height="54dp">

                <FrameLayout
                    android:layout_width="350dp"
                    android:layout_height="54dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_signup_auth"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:background="@drawable/bg_gray_fill_rect"
                        android:hint="인증코드 6자리 입력"
                        android:paddingLeft="15dp"
                        android:textColorHint="#A9ADB4"
                        android:textCursorDrawable="@null"
                        android:textSize="14dp"
                        tools:ignore="DuplicateIds" />

                    <TextView
                        android:id="@+id/tv_signup_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="71dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="right"
                        android:text="TextView"
                        android:textColor="#C23F3F"
                        android:visibility="invisible" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_signup_checkauth"
                        android:layout_width="47dp"
                        android:layout_height="27dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="13dp"
                        android:background="@drawable/btn_selecotor_etbtncolor"
                        android:text="확인"
                        android:textColor="#FFFFFF"
                        android:textSize="10dp" />
                </FrameLayout>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_signup_authlogo"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center|left"
                    app:srcCompat="@drawable/ic_signup_authic" />

                <TextView
                    android:id="@+id/tv_signup_guide3"
                    android:layout_width="147dp"
                    android:layout_height="wrap_content"
                    android:text="인증코드를 받지 못하셨나요?"
                    android:textColor="#ACACAC"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_signup_btnresend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/signup_resend"
                    android:textColor="#ACACAC"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_signup_l2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_signup_l1"
        app:layout_constraintVertical_weight="0.28">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.7" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_signup_next"
            android:layout_width="190dp"
            android:layout_height="56dp"
            android:background="@drawable/btn_selector_color"
            android:text="다음"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5" />

        <LinearLayout
            android:id="@+id/ll_signup_btnsignin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:padding="0dp"
                android:text="이미 계정이 있다면?"
                android:textColor="#191B1A"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_signup_btnsignin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그인"
                android:textAlignment="textEnd"
                android:textColor="#F07818"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.7" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>