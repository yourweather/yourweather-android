<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.SignIn"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="144dp">

        <TextView
            android:id="@+id/tv_signup_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="262dp"
            android:layout_marginEnd="100dp"
            android:bufferType="spannable"
            android:gravity="center"
            android:text="하루 3번,\n간편하게 기록을 남기고\n나만의 날씨를 만들어보세요"
            android:textColor="#8E7A6D"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_signup_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="340dp"
            android:layout_marginEnd="0dp"
            android:bufferType="spannable"
            android:gravity="left"
            android:text="이메일"
            android:textColor="#A9ADB4"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_signup_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="430dp"
            android:layout_marginEnd="0dp"
            android:bufferType="spannable"
            android:gravity="left"
            android:text="이메일로 전송된 인증코드를 입력해주세요."
            android:textColor="#A9ADB4"
            android:textSize="13dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_signup_logo"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="136dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="136dp"
            android:layout_marginRight="100dp"
            android:src="@drawable/img_yourweatherlogo" />


        <EditText
            android:id="@+id/et_signup_email"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="360dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/bg_gray_fill_rect" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_signup_sendcode"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="288dp"
            android:layout_marginTop="370dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/bg_orange_fill_300_circle_sub"
            android:text="인증코드 전송"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_signup_check"
            android:layout_width="65dp"
            android:layout_height="38dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="316dp"
            android:layout_marginTop="460dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/bg_orange_fill_300_circle_sub"
            android:text="확인"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_signup_pw"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="450dp"
            android:layout_marginRight="19dp"
            android:background="@drawable/bg_gray_fill_rect"
            android:hint="인증코드 6자리 입력"
            android:paddingLeft="16dp"
            android:textColorHint="#A9ADB4"
            android:textCursorDrawable="@null"
            android:textSize="16sp"
            tools:ignore="DuplicateIds" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_signup_next"
            android:layout_width="191dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="108dp"
            android:layout_marginTop="550dp"
            android:layout_marginRight="92dp"
            android:background="@drawable/bg_orange_fill_300_circle"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="3sp"
            android:text="다음"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationY="-1.52sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="508dp"
            android:layout_marginBottom="200dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_signup_guide3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:text="인증코드를 받지 못하셨나요?"
                android:textColor="#ACACAC"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_signup_btnresend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:text="인증코드 재전송"
                android:textColor="#ACACAC"
                android:textSize="10sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_signup_guide2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이미 계정이 있다면?"
                android:textColor="#5E412F"
                android:textSize="16sp"
                android:layout_marginEnd="5dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_signup_btnsignin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그인"
                android:textColor="#F07818"
                android:textSize="16sp"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                />

        </LinearLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>