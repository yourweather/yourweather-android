<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.AnalysisActivity">

    <!-- 상단 레이아웃 -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_statics_left_date"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/ic_arrow_left_24"
            app:layout_constraintHeight_percent="0.05" />

        <TextView
            android:id="@+id/tv_unwritten_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:text="이번 주"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_statics_right_date"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/ic_arrow_right_24"
            app:layout_constraintHeight_percent="0.05" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn_report_rec"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:layout_margin="25dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_icon_statics_sunny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="10"
                app:srcCompat="@drawable/ic_sun"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="93dp" />

            <TextView
                android:id="@+id/tv_static_icon_detail_sunny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="40%"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginLeft="230dp"
                />

            <ImageButton
                android:id="@+id/btn_statics_right_detail1"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="11dp"
                android:layout_height="19dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_rightarrow"
                app:layout_constraintHeight_percent="0.05"
                android:layout_weight="1"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_icon_statics_bar1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/bg_gray_fill_rect"
            app:layout_constraintBottom_toTopOf="@+id/scrollView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_analysis"
            app:layout_constraintVertical_bias="0.036" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_icon_statics_cloudy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="10"
                app:srcCompat="@drawable/ic_cloud"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="93dp" />

            <TextView
                android:id="@+id/tv_static_icon_detail_cloudy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="40%"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginLeft="230dp"
                />

            <ImageButton
                android:id="@+id/btn_statics_right_detail2"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="11dp"
                android:layout_height="19dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_rightarrow"
                app:layout_constraintHeight_percent="0.05"
                android:layout_weight="1"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_icon_statics_bar2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/bg_gray_fill_rect"
            app:layout_constraintBottom_toTopOf="@+id/scrollView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_analysis"
            app:layout_constraintVertical_bias="0.036" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_icon_statics_rainy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_rain"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="93dp"
                android:layout_weight="10"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/tv_static_icon_detail_rainy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="40%"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginLeft="230dp"
                />

            <ImageButton
                android:id="@+id/btn_statics_right_detail3"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="11dp"
                android:layout_height="19dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_rightarrow"
                app:layout_constraintHeight_percent="0.05"
                android:layout_weight="1"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_icon_statics_bar3"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/bg_gray_fill_rect"
            app:layout_constraintBottom_toTopOf="@+id/scrollView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_analysis"
            app:layout_constraintVertical_bias="0.036" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_icon_statics_thunder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_thunder"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="93dp"
                android:layout_weight="10"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/tv_static_icon_detail_thunder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="40%"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginLeft="230dp"
                />

            <ImageButton
                android:id="@+id/btn_statics_right_detail4"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="11dp"
                android:layout_height="19dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_rightarrow"
                app:layout_constraintHeight_percent="0.05"
                android:layout_weight="1"
                />

        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
