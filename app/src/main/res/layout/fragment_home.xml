<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.weatherinput.HomeFragment">

    <FrameLayout
        android:id="@+id/fl_home_l1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/bg_home_weather"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/bg_home1_sunny"
                tools:layout_editor_absoluteY="62dp" />


            <TextView
                android:id="@+id/tv_home_ad"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="58dp"
                android:layout_marginEnd="16dp"
                android:background="@color/white"
                android:fontFamily="@font/pretendardsemibold"
                android:gravity="center"
                android:text="광고 텍스트가 들어갈 자리입니다."
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/bg_home_weather" />


<!--            <androidx.appcompat.widget.AppCompatButton-->
<!--                android:id="@+id/btn_home_ad_move"-->
<!--                android:layout_width="30dp"-->
<!--                android:layout_height="18dp"-->
<!--                android:layout_marginStart="270dp"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_marginEnd="28dp"-->
<!--                android:layout_marginBottom="10dp"-->
<!--                android:background="@drawable/bg_home_movead"-->
<!--                android:fontFamily="@font/pretendardmedium"-->
<!--                android:text="이동"-->
<!--                android:textColor="@color/white"-->
<!--                android:textSize="8dp"-->
<!--                app:layout_constraintBottom_toBottomOf="@+id/tv_home_ad"-->
<!--                app:layout_constraintEnd_toEndOf="@+id/tv_home_ad"-->
<!--                app:layout_constraintHorizontal_bias="1.0"-->
<!--                app:layout_constraintStart_toStartOf="@+id/tv_home_ad"-->
<!--                app:layout_constraintTop_toTopOf="@+id/tv_home_ad"-->
<!--                app:layout_constraintVertical_bias="1.0" />-->


            <FrameLayout
                android:id="@+id/fl_home_ad_exit"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginStart="3dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_home_ad"
                app:layout_constraintEnd_toEndOf="@+id/tv_home_ad"
                app:layout_constraintTop_toTopOf="@+id/tv_home_ad">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/btn_home_ad_exit"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginBottom="23dp"
                        android:background="@android:color/transparent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        app:srcCompat="@drawable/ic_home_exit" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>

            <ImageButton
                android:id="@+id/btn_home_share"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="317dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="684dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_home_share" />

            <LinearLayout
                android:id="@+id/ll_home_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="129dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/bg_home_weather">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_home_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bmhanna"
                        android:gravity="center"
                        android:text="닉네임 님의 감정날씨"
                        android:textColor="@color/brown"
                        android:textSize="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/motion_home_weather"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_home_weather" />

            <TextView
                android:id="@+id/tv_home_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/bmhanna"
                android:textColor="@color/brown"
                android:textSize="53dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_home_title"
                app:layout_constraintVertical_bias="0" />

            <TextView
                android:id="@+id/tv_home_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/bmhanna"
                android:textColor="@color/brown"
                android:textSize="53dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_home_temp_unit"
                app:layout_constraintTop_toBottomOf="@+id/motion_home_weather" />

            <TextView
                android:id="@+id/tv_home_temp_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="125dp"
                android:fontFamily="@font/pretendardsemibold"
                android:text="°C"
                android:textColor="@color/brown"
                android:textSize="53dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/motion_home_weather" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_home_weatherinput"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginStart="306dp"
                android:layout_marginTop="633dp"
                android:layout_marginEnd="22dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/ic_home_btn"
                app:layout_constraintBottom_toTopOf="@+id/bnv_main"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bnv_main"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/shape_gray_line_rect"
                app:itemHorizontalTranslationEnabled="false"
                app:itemIconTint="@drawable/menu_selector_color"
                app:itemIconSize="24dp"
                app:itemTextColor="@drawable/menu_selector_color"
                app:labelVisibilityMode="unlabeled"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:menu="@menu/menu_bnv" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

