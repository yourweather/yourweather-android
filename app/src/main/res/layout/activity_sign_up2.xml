<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.SignIn"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="144dp">

        <TextView
            android:id="@+id/tv_signup2_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="262dp"
            android:layout_marginEnd="100dp"
            android:bufferType="spannable"
            android:gravity="center"
            android:text="하루 3번,\n간편하게 기록을 남기고\n나만의 날씨를 만들어보세요"
            android:textColor="#8E7A6D"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_signup2_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="340dp"
            android:layout_marginEnd="0dp"
            android:bufferType="spannable"
            android:gravity="left"
            android:text="비밀번호"
            android:textColor="#A9ADB4"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_signup2_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="430dp"
            android:layout_marginEnd="0dp"
            android:bufferType="spannable"
            android:gravity="left"
            android:text="비밀번호 재확인"
            android:textColor="#A9ADB4"
            android:textSize="13dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/tv_signup2_logo"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="136dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="136dp"
            android:layout_marginRight="100dp"
            android:src="@drawable/img_yourweatherlogo" />


        <EditText
            android:id="@+id/et_signup2_pw"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="360dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/bg_gray_fill_rect" />

        <EditText
            android:id="@+id/et_signup2_checkpw"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="450dp"
            android:layout_marginRight="19dp"
            android:background="@drawable/bg_gray_fill_rect"
            tools:ignore="DuplicateIds" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_signup2_signup"
            android:layout_width="191dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="108dp"
            android:layout_marginTop="550dp"
            android:layout_marginRight="92dp"
            android:background="@drawable/bg_orange_fill_300_circle"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="3sp"
            android:text="회원가입"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationY="-1.52sp" />



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>