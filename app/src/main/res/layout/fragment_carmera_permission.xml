<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/iv_carmera_permission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_carmera_permission"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_carmera_permission_no"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/pretendardmedium"
                android:gravity="center"
                android:text="취소"
                android:textColor="@color/gray"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_carmera_permission"
                app:layout_constraintStart_toStartOf="@+id/iv_carmera_permission" />

            <TextView
                android:id="@+id/tv_carmera_permission_yes"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/pretendardmedium"
                android:gravity="center"
                android:text="설정이동"
                android:textColor="@color/orange"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_carmera_permission"
                app:layout_constraintStart_toEndOf="@+id/tv_carmera_permission_no" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>